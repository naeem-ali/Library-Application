@model System.Data.DataTable
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="my-4 d-flex justify-content-between">
    <h1>Author list</h1>

</div>

<table class="table table-border table-striped">
    <tr>

        
        <th>Author Name</th>

    </tr>

    @for (int i = 0; i < Model.Rows.Count; i++)
    {
        <tr>
            
            <td>@Model.Rows[i][1]</td>
         
            <td>
                <a href="@Url.Action("Edit", "Author", new {@id=@Model.Rows[i][0]})">Edit</a>
                <a href="@Url.Action("Delete", "Author", new {@id=@Model.Rows[i][0]})">Delete</a>
            </td>

        </tr>
    }
</table>

<a class="btn btn-success" href="@Url.Action("Create","Author")"> Add Author </a>
